NODE_ENV=development
PORT=3000

# PostgreSQL — reemplaza user, password, host, puerto y nombre de la BD
DATABASE_URL="postgresql://postgres:password@localhost:5432/ventas_db"

# Redis — URL de conexión (usa redis://localhost:6379 si es local)
REDIS_URL=redis://localhost:6379

# JWT — clave secreta de al menos 32 caracteres (¡no uses este valor en producción!)
JWT_SECRET=cambia_esto_por_una_clave_secreta_de_al_menos_32_caracteres
JWT_EXPIRES_IN=7d
